[Unit]
Description=nexus service
After=network.target

[Service]
Type=forking

LimitNOFILE=65536

User=$NEXUS_USERNAME

ExecStart=/opt/nexus/bin/nexus start
ExecStop=/opt/nexus/bin/nexus stop
Restart=on-abort

[Install]
WantedBy=multi-user.target
Esc
