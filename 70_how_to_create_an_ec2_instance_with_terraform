# @command line on Linux instance
cd ~
mkdir $TERRAFORM_PROJECT
cd $TERRAFORM_PROJECT
ssh-keygen -f $TERRAFORM_KEY

nano aws.tf
provider "aws" {
    access_key="paste access key from access key file"
    secret_key="paste secret key from access key file"
    region="us-east-2"
}
ctrl+x
y
Enter
terraform validate
terraform init

nano create_ec2.tf
resource "aws_key_pair" "terraform_key" {
	key_name="terraform_key"
	public_key=file("${path.root}/terraform_key.pub")
}

resource "aws_security_group" "jenkins_security_group" {
	name="jenkins_security_group"
	description="jenkins security group"
	
	ingress {
		from_port=8080
		to_port=8080
		protocol="tcp"
		cidr_blocks=["0.0.0.0/0"]
	}

	ingress {
		from_port=22
		to_port=22
		protocol="tcp"
		cidr_blocks=["70.122.132.2/32"]
	}

	egress {
		from_port=0
		to_port=65535
		protocol="tcp"
		cidr_blocks=["0.0.0.0/0"]
	}

	tags={
		name="jenkins_security_group"
	}
}

resource "aws_instance" "TerraformedEC2Instance" {
	ami="ami-0fc20dd1da406780b"
	count=1
	key_name="terraform_key"
	instance_type="t2.micro"
	security_groups=["jenkins_security_group"]
	tags={
		name="jenkins_instance"
	}
}

ctrl+x
y
Enter

terraform validate
terraform plan
terraform apply
