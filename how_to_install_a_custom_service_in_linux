# custom services - /etc/systemd/service/$SERVICE_NAME.service
sudo nano /etc/systemd/service/$SERVICE_NAME.service
[Unit]
Description=$SERVICE_NAME service
After=

[Service]
ExecStart=/path/to/$SERVICE_NAME.sh start
ExecStop=/path/to/$SERVICE_NAME.sh stop

User=$USER
Group=$GROUP
Restart=always|

[Install]
WantedBy=multi-user.target|
ctrl+x
y
sudo systemctl enable $SERVICE_NAME.service
sudo systemctl status $SERVICE_NAME
