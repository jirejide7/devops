cd ~/jenkins_pipelines

git checkout -b docker_workspace

nano Jenkinsfile
pipeline {
    agent {
        docker { image 'node:7-alpine' }
    }

    stages {
        stage('DockerWorkspace') {
            steps {
                sh 'node --version'
                sh 'pwd'
                sh 'whoami'
            }
        }
    }
}

CTRL+X
y
Enter

git status
git add Jenkinsfile
git commit -m "created Jenkinsfile to show docker workspace"
git push github docker_workspace
git status
